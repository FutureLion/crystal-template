@import "navigate.styl"
@import "tree.styl"
@import "pagination.styl"
@import "example.styl"

.editable
    display inline-block
    cursor pointer
    color #337ab7

    &:hover        
        text-decoration underline


.op
    > *
        margin 0 0.5em

.form-group
    .checkbox-inline,
    .radio-inline
        margin-left 0
        margin-right 20px
    label
        margin-top:7px

    &.required
        > .control-label:before
            content '*'
            color red